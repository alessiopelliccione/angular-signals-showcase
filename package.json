{
  "name": "angular-signal-forms-presentation",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Angular Signal Forms presentation - includes showcase website and Angular playground examples",
  "workspaces": [
    "showcase",
    "playground/*"
  ],
  "scripts": {
    "showcase:dev": "npm run dev --workspace=showcase",
    "showcase:build": "npm run build --workspace=showcase",
    "showcase:preview": "npm run preview --workspace=showcase",
    "dev:auth-form": "npm run dev --workspace=signal-forms-auth",
    "dev:contacts-form": "npm run dev --workspace=signal-contacts-form",
    "install:all": "npm install",
    "clean": "rm -rf showcase/node_modules playground/*/node_modules node_modules"
  },
  "keywords": [
    "angular",
    "signals",
    "signal-forms",
    "presentation",
    "monorepo"
  ],
  "author": "",
  "license": "ISC"
}
